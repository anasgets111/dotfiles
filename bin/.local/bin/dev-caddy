#!/usr/bin/env bash
set -euo pipefail

SCRIPT_NAME="$(basename "$0")"
ACTION="${1:-}"
PROJECT="${2:-sacredcube}"
APP_PATH="${3:-$(pwd)}"
PHP_FPM_SOCK="${4:-/run/php-fpm/php-fpm.sock}"
ORIGINAL_ARGS=("$@")
SCRIPT_PATH="$(readlink -f "$0" 2>/dev/null || printf "%s" "$0")"

DOMAIN="${PROJECT}.test"
SITE_CONF="/etc/caddy/conf.d/${PROJECT}.conf"
CADDYFILE="/etc/caddy/Caddyfile"
LEGACY_BIND_TARGET="/srv/dev/${PROJECT}"
if command -v systemd-escape >/dev/null 2>&1; then
    LEGACY_MOUNT_UNIT="$(systemd-escape --suffix=mount --path "${LEGACY_BIND_TARGET}")"
else
    LEGACY_MOUNT_UNIT="srv-dev-${PROJECT}.mount"
fi
LEGACY_MOUNT_UNIT_PATH="/etc/systemd/system/${LEGACY_MOUNT_UNIT}"
USER_OVERRIDE_PATH="/etc/systemd/system/caddy.service.d/10-local-dev-user.conf"
IMPORT_BLOCK_BEGIN="# BEGIN dev-caddy-import"
IMPORT_BLOCK_END="# END dev-caddy-import"

print_usage() {
    cat <<EOF
Usage:
  sudo ./${SCRIPT_NAME} setup [project] [app-path] [php-fpm-socket]
  sudo ./${SCRIPT_NAME} revert [project]
  sudo ./${SCRIPT_NAME} proxy [name] [port] [upstream-host]
  sudo ./${SCRIPT_NAME} unproxy [name]
  ./${SCRIPT_NAME} status [project]
  ./${SCRIPT_NAME} status-proxy [name]

Examples:
  sudo ./${SCRIPT_NAME} setup sacredcube /mnt/Work/0Coding/0SacredCube/erp /run/php-fpm/php-fpm.sock
  sudo ./${SCRIPT_NAME} revert sacredcube
  sudo ./${SCRIPT_NAME} proxy mailpit 8025
  sudo ./${SCRIPT_NAME} unproxy mailpit
  ./${SCRIPT_NAME} status sacredcube
  ./${SCRIPT_NAME} status-proxy mailpit
EOF
}

require_root() {
    if [[ "${EUID}" -ne 0 ]]; then
        if ! command -v sudo >/dev/null 2>&1; then
            echo "This action requires root and sudo is not installed."
            exit 1
        fi

        exec sudo -- "${SCRIPT_PATH}" "${ORIGINAL_ARGS[@]}"
    fi
}

ensure_conf_import() {
    if grep -Eq '^[[:space:]]*import[[:space:]]+/etc/caddy/conf\.d/\*[[:space:]]*$' "${CADDYFILE}"; then
        return
    fi

    printf '\n%s\nimport /etc/caddy/conf.d/*\n%s\n' \
        "${IMPORT_BLOCK_BEGIN}" \
        "${IMPORT_BLOCK_END}" >> "${CADDYFILE}"
}

restore_default_caddy_service_state() {
    rm -f "${USER_OVERRIDE_PATH}"
    systemctl daemon-reload

    if id caddy >/dev/null 2>&1; then
        install -d -o caddy -g caddy -m 750 /run/caddy /var/lib/caddy /var/log/caddy
        chown -R caddy:caddy /var/lib/caddy /var/log/caddy
    fi
}

cleanup_legacy_bind_mount() {
    if systemctl is-enabled --quiet "${LEGACY_MOUNT_UNIT}" 2>/dev/null; then
        systemctl disable --now "${LEGACY_MOUNT_UNIT}" >/dev/null || true
    else
        systemctl stop "${LEGACY_MOUNT_UNIT}" 2>/dev/null || true
    fi

    rm -f "${LEGACY_MOUNT_UNIT_PATH}"
    systemctl daemon-reload

    if mountpoint -q "${LEGACY_BIND_TARGET}"; then
        umount "${LEGACY_BIND_TARGET}" || true
    fi
}

ensure_user_traversal_acl() {
    local user_name="${1}"
    local target_path="${2}"
    local current_dir

    if ! command -v setfacl >/dev/null 2>&1; then
        echo "setfacl not installed, skipping traversal ACL setup for ${user_name}."
        return
    fi

    if ! id "${user_name}" >/dev/null 2>&1; then
        echo "User ${user_name} not found, skipping traversal ACL setup."
        return
    fi

    current_dir="$(readlink -f "${target_path}" 2>/dev/null || printf "%s" "${target_path}")"
    while [[ "${current_dir}" != "/" ]]; do
        if [[ -d "${current_dir}" ]]; then
            setfacl -m "u:${user_name}:--x" "${current_dir}" >/dev/null 2>&1 || true
        fi
        current_dir="$(dirname "${current_dir}")"
    done
}

warn_cache_prefix_mismatch() {
    local app_root="${1}"
    local cache_dir="${app_root}/bootstrap/cache"
    local mismatch_prefix=""

    [[ -d "${cache_dir}" ]] || return

    case "${app_root}" in
        /srv/dev/*)
            mismatch_prefix="/mnt/"
            ;;
        /mnt/*)
            mismatch_prefix="/srv/dev/"
            ;;
        *)
            return
            ;;
    esac

    if grep -RqsF "${mismatch_prefix}" "${cache_dir}"; then
        echo "Warning: cache files under ${cache_dir} still reference ${mismatch_prefix}"
        echo "Rebuild Laravel caches from ${app_root}:"
        echo "  php artisan optimize:clear"
        echo "  php artisan config:cache"
        echo "  php artisan route:cache"
        echo "  php artisan view:cache"
    fi
}

detect_fpm_user() {
    local socket_path="${1:-}"
    local detected_user=""
    local pool_file

    if [[ -S "${socket_path}" ]]; then
        detected_user="$(stat -c '%U' "${socket_path}" 2>/dev/null || true)"
        if [[ -n "${detected_user}" && "${detected_user}" != "UNKNOWN" ]]; then
            printf "%s" "${detected_user}"
            return
        fi
    fi

    for pool_file in \
        /etc/php/php-fpm.d/www.conf \
        /etc/php-fpm.d/www.conf \
        /etc/php/*/fpm/pool.d/www.conf; do
        [[ -f "${pool_file}" ]] || continue
        detected_user="$(awk -F= '/^[[:space:]]*user[[:space:]]*=/{gsub(/[[:space:]]/,"",$2); print $2; exit}' "${pool_file}" 2>/dev/null || true)"
        if [[ -n "${detected_user}" ]]; then
            printf "%s" "${detected_user}"
            return
        fi
    done

    if id www-data >/dev/null 2>&1; then
        printf "%s" "www-data"
        return
    fi

    printf "%s" "http"
}

grant_laravel_runtime_permissions() {
    local source_path="${1}"
    local fpm_user
    local writable_dir

    fpm_user="$(detect_fpm_user "${PHP_FPM_SOCK}")"

    ensure_user_traversal_acl "${fpm_user}" "${source_path}"
    if id caddy >/dev/null 2>&1; then
        ensure_user_traversal_acl caddy "${source_path}"
    fi

    if ! id "${fpm_user}" >/dev/null 2>&1; then
        echo "PHP-FPM user ${fpm_user} not found, skipping ACL setup."
        return
    fi

    if ! command -v setfacl >/dev/null 2>&1; then
        echo "setfacl not installed, skipping ACL setup."
        return
    fi

    for writable_dir in "${source_path}/storage" "${source_path}/bootstrap/cache"; do
        mkdir -p "${writable_dir}"

        if ! setfacl -R -m "u:${fpm_user}:rwx" "${writable_dir}"; then
            echo "Failed to apply ACL on ${writable_dir}, skipping."
            continue
        fi

        if ! setfacl -R -d -m "u:${fpm_user}:rwx" "${writable_dir}"; then
            echo "Failed to apply default ACL on ${writable_dir}, skipping."
        fi
    done
}

setup_site() {
    local resolved_app_path
    local public_path

    if [[ ! -d "${APP_PATH}" ]]; then
        echo "Project path not found: ${APP_PATH}"
        exit 1
    fi

    resolved_app_path="$(readlink -f "${APP_PATH}")"
    public_path="${resolved_app_path}/public"

    if [[ ! -d "${public_path}" ]]; then
        echo "Laravel public path not found: ${public_path}"
        exit 1
    fi

    if [[ ! -S "${PHP_FPM_SOCK}" ]]; then
        echo "PHP-FPM socket not found: ${PHP_FPM_SOCK}"
        exit 1
    fi

    grant_laravel_runtime_permissions "${resolved_app_path}"
    restore_default_caddy_service_state
    cleanup_legacy_bind_mount

    mkdir -p /etc/caddy/conf.d
    ensure_conf_import
    write_caddy_conf_with_validation "${SITE_CONF}" <<EOF
${DOMAIN}, *.${DOMAIN} {
    root * ${public_path}
    encode zstd gzip
    php_fastcgi unix//${PHP_FPM_SOCK}
    file_server
    tls internal
}
EOF

    systemctl enable caddy >/dev/null
    systemctl restart caddy
    caddy trust --config "${CADDYFILE}"

    echo "Caddy site configured: ${SITE_CONF}"
    echo "Hosts: ${DOMAIN}, *.${DOMAIN}"
    echo "Root path: ${public_path}"
    warn_cache_prefix_mismatch "${resolved_app_path}"
}

revert_site() {
    remove_caddy_conf_with_validation "${SITE_CONF}"
    cleanup_legacy_bind_mount

    if systemctl is-active --quiet caddy; then
        systemctl restart caddy
    fi

    echo "Removed Caddy site config: ${SITE_CONF}"
    echo "Legacy bind mount cleanup done: ${LEGACY_MOUNT_UNIT_PATH}"
}

status_site() {
    local project="${1}"
    local domain="${project}.test"
    local conf="/etc/caddy/conf.d/${project}.conf"
    local legacy_bind_target="/srv/dev/${project}"
    local legacy_mount_unit
    local configured_public_path=""

    if command -v systemd-escape >/dev/null 2>&1; then
        legacy_mount_unit="$(systemd-escape --suffix=mount --path "${legacy_bind_target}")"
    else
        legacy_mount_unit="srv-dev-${project}.mount"
    fi

    validate_project_name "${project}"

    echo "=== caddy service ==="
    systemctl is-active caddy || true
    systemctl show caddy -p User -p Group || true
    echo

    echo "=== caddy validate ==="
    caddy validate --config /etc/caddy/Caddyfile || true
    echo

    echo "=== configured root ==="
    if [[ -f "${conf}" ]]; then
        configured_public_path="$(sed -nE 's/^[[:space:]]*root[[:space:]]+\*[[:space:]]+(.+)$/\1/p' "${conf}" | head -n 1)"
        grep -E '^[[:space:]]*root[[:space:]]+\*[[:space:]]+' "${conf}" | head -n 1 || true
    else
        echo "Missing: ${conf}"
    fi
    echo

    if [[ -n "${configured_public_path}" ]]; then
        warn_cache_prefix_mismatch "$(dirname "${configured_public_path}")"
        echo
    fi

    echo "=== legacy bind mount (old setup) ==="
    systemctl is-active "${legacy_mount_unit}" || true
    findmnt --target "${legacy_bind_target}" || true
    echo

    echo "=== site config ==="
    if [[ -f "${conf}" ]]; then
        sed -n '1,120p' "${conf}"
    else
        echo "Missing: ${conf}"
    fi
    echo

    echo "=== HTTPS checks ==="
    curl -Ik "https://${domain}" || true
    curl -Ik "https://app.${domain}" || true
}

validate_project_name() {
    local project_name="${1}"

    if [[ ! "${project_name}" =~ ^[a-z0-9]([a-z0-9-]*[a-z0-9])?$ ]]; then
        echo "Invalid project name: ${project_name}"
        echo "Use lowercase letters, digits, and hyphens only."
        exit 1
    fi
}

validate_proxy_name() {
    local proxy_name="${1}"

    if [[ ! "${proxy_name}" =~ ^[a-z0-9]([a-z0-9-]*[a-z0-9])?$ ]]; then
        echo "Invalid proxy name: ${proxy_name}"
        echo "Use lowercase letters, digits, and hyphens only."
        exit 1
    fi
}

validate_upstream_host() {
    local upstream_host="${1}"

    if [[ "${upstream_host}" == "localhost" ]]; then
        return
    fi

    if [[ "${upstream_host}" =~ ^([a-zA-Z0-9-]+\.)*[a-zA-Z0-9-]+$ ]]; then
        return
    fi

    if [[ "${upstream_host}" =~ ^([0-9]{1,3}\.){3}[0-9]{1,3}$ ]]; then
        return
    fi

    if [[ "${upstream_host}" =~ ^\[[0-9A-Fa-f:]+\]$ ]]; then
        return
    fi

    echo "Invalid upstream host: ${upstream_host}"
    echo "Use hostname, IPv4, localhost, or bracketed IPv6 (for example [::1])."
    exit 1
}

validate_proxy_port() {
    local proxy_port="${1}"

    if [[ ! "${proxy_port}" =~ ^[0-9]+$ ]]; then
        echo "Invalid port: ${proxy_port}"
        exit 1
    fi

    if ((proxy_port < 1 || proxy_port > 65535)); then
        echo "Port out of range: ${proxy_port}"
        exit 1
    fi
}

write_caddy_conf_with_validation() {
    local target_conf="${1}"
    local tmp_conf
    local backup_conf=""
    local had_existing=0

    tmp_conf="$(mktemp)"
    cat > "${tmp_conf}"

    if [[ -f "${target_conf}" ]]; then
        had_existing=1
        backup_conf="$(mktemp)"
        cp "${target_conf}" "${backup_conf}"
    fi

    install -m 644 "${tmp_conf}" "${target_conf}"
    rm -f "${tmp_conf}"

    if ! caddy validate --config "${CADDYFILE}"; then
        if ((had_existing == 1)); then
            install -m 644 "${backup_conf}" "${target_conf}"
        else
            rm -f "${target_conf}"
        fi

        rm -f "${backup_conf}"
        echo "Caddy validation failed for ${target_conf}. Restored previous config."
        exit 1
    fi

    rm -f "${backup_conf}"
}

remove_caddy_conf_with_validation() {
    local target_conf="${1}"
    local backup_conf=""
    local had_existing=0

    if [[ -f "${target_conf}" ]]; then
        had_existing=1
        backup_conf="$(mktemp)"
        cp "${target_conf}" "${backup_conf}"
    fi

    rm -f "${target_conf}"

    if ! caddy validate --config "${CADDYFILE}"; then
        if ((had_existing == 1)); then
            install -m 644 "${backup_conf}" "${target_conf}"
        fi

        rm -f "${backup_conf}"
        echo "Caddy validation failed after removing ${target_conf}. Restored previous config."
        exit 1
    fi

    rm -f "${backup_conf}"
}

setup_proxy() {
    local proxy_name="${1}"
    local proxy_port="${2}"
    local upstream_host="${3:-127.0.0.1}"
    local proxy_domain="${proxy_name}.test"
    local proxy_conf="/etc/caddy/conf.d/${proxy_name}.proxy.conf"

    validate_proxy_name "${proxy_name}"
    validate_proxy_port "${proxy_port}"
    validate_upstream_host "${upstream_host}"

    mkdir -p /etc/caddy/conf.d
    ensure_conf_import
    write_caddy_conf_with_validation "${proxy_conf}" <<EOF
${proxy_domain} {
    reverse_proxy ${upstream_host}:${proxy_port}
    tls internal
}
EOF

    systemctl enable caddy >/dev/null
    if systemctl is-active --quiet caddy; then
        systemctl reload caddy
    else
        systemctl start caddy
    fi
    caddy trust --config "${CADDYFILE}"

    echo "Proxy configured: ${proxy_conf}"
    echo "Host: https://${proxy_domain}"
    echo "Upstream: ${upstream_host}:${proxy_port}"
}

revert_proxy() {
    local proxy_name="${1}"
    local proxy_conf="/etc/caddy/conf.d/${proxy_name}.proxy.conf"

    validate_proxy_name "${proxy_name}"
    remove_caddy_conf_with_validation "${proxy_conf}"

    if systemctl is-active --quiet caddy; then
        systemctl reload caddy
    fi

    echo "Removed proxy config: ${proxy_conf}"
}

status_proxy() {
    local proxy_name="${1}"
    local proxy_domain="${proxy_name}.test"
    local proxy_conf="/etc/caddy/conf.d/${proxy_name}.proxy.conf"

    validate_proxy_name "${proxy_name}"

    echo "=== caddy service ==="
    systemctl is-active caddy || true
    echo

    echo "=== caddy validate ==="
    caddy validate --config /etc/caddy/Caddyfile || true
    echo

    echo "=== proxy config ==="
    if [[ -f "${proxy_conf}" ]]; then
        sed -n '1,120p' "${proxy_conf}"
    else
        echo "Missing: ${proxy_conf}"
    fi
    echo

    echo "=== HTTPS check ==="
    curl -Ik "https://${proxy_domain}" || true
}

case "${ACTION}" in
    setup)
        require_root
        validate_project_name "${PROJECT}"
        setup_site
        ;;
    revert)
        require_root
        validate_project_name "${PROJECT}"
        revert_site
        ;;
    status)
        validate_project_name "${PROJECT}"
        status_site "${PROJECT}"
        ;;
    proxy)
        require_root
        setup_proxy "${2:-}" "${3:-}" "${4:-127.0.0.1}"
        ;;
    unproxy)
        require_root
        revert_proxy "${2:-}"
        ;;
    status-proxy)
        status_proxy "${2:-}"
        ;;
    *)
        print_usage
        exit 1
        ;;
esac
