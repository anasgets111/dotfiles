		{
			"type": "battery",
			"key": "\u001b[38;5;40m│\u001b[0m    Battery:",
			"keyColor": "green",
			"keyWidth": 20
		},
		{
			"type": "cpu",
			"key": "\u001b[38;5;40m│\u001b[0m  󰻠  CPU:",
			"showPeCoreCount": true,
			"keyColor": "green",
			"keyWidth": 20
		},
		{
			"type": "gpu",
			"key": "\u001b[38;5;40m│\u001b[0m  󰢮  GPU:",
			"keyColor": "green",
			"format": "{2} {3}",
			"keyWidth": 20
		},
		{
			"type": "memory",
			"key": "\u001b[38;5;40m│\u001b[0m  󰑭  RAM:",
			"keyColor": "green",
			"keyWidth": 20
		},
		{
			"type": "disk",
			"key": "\u001b[38;5;40m│\u001b[0m  󰋊  Disk:",
			"folders": "/",
			"keyColor": "green",
			"keyWidth": 20
		},
		{
			"type": "custom",
			"format": "\u001b[38;5;40m╰────────────────────────────────────────────────────────────────────────╯"
		},

		// ─────────────── Software ───────────────
		{
			"type": "custom",
			"format": "\u001b[38;5;220m╭─────────────────────────────── Software ───────────────────────────────╮"
		},
		{
			"type": "os",
			"key": "\u001b[38;5;220m│\u001b[0m    OS:",
			"keyColor": "yellow",
			"format": "{2} BTW",
			"keyWidth": 20
