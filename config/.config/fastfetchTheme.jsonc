{
	"$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
	"display": {
		"separator": " "
	},
	"modules": [
		// ─────────────── Hardware ───────────────
		{
			"type": "custom",
			"format": "\u001b[38;5;40m╭─────────────────────────────── Hardware ───────────────────────────────╮"
		},
		{
			"type": "board",
			"key": "\u001b[38;5;40m│\u001b[0m    Motherboard:",
			"keyColor": "green",
			"keyWidth": 20
		},
		{
			"type": "bios",
			"key": "\u001b[38;5;40m│\u001b[0m    BIOS:",
			"keyColor": "green",
			"keyWidth": 20
