		},
		{
			"type": "bios",
			"key": "\u001b[38;5;40m│  BIOS:",
			"keyWidth": 20
		},
		{
			"type": "battery",
			"key": "\u001b[38;5;40m│  Battery:",
			"keyWidth": 20
		},
		{
			"type": "cpu",
			"key": "\u001b[38;5;40m│ 󰻠 CPU:",
			"showPeCoreCount": true,
			"keyWidth": 20
		},
		{
			"type": "gpu",
			"key": "\u001b[38;5;40m│ 󰢮 GPU:",
			"format": "{2} {3}",
			"keyWidth": 20
		},
		{
			"type": "memory",
			"key": "\u001b[38;5;40m│ 󰑭 RAM:",
			"keyWidth": 20
		},
		{
			"type": "disk",
			"key": "\u001b[38;5;40m│ 󰋊 Disk:",
