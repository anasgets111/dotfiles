		{
			"type": "initsystem",
			"key": "\u001b[38;5;220m│\u001b[0m    BootLoader:",
			"format": "{1}",
			"keyColor": "yellow",
			"keyWidth": 20
		},
		{
			"type": "kernel",
			"key": "\u001b[38;5;220m│\u001b[0m    Kernel:",
			"keyColor": "yellow",
			"keyWidth": 20
