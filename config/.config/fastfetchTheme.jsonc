		// ─────────────── System Times ───────────────
		{
			"type": "custom",
			"format": "\u001b[38;5;135m╭──────────────────────────── System Times ──────────────────────────────╮"
		},
		{
			"type": "command",
			"key": "\u001b[38;5;135m│\u001b[0m  Linux Journey:",
			"keyColor": "magenta",
			"text": "echo $(( ( $(date +%s) - $(date -d '2024-02-15' +%s) ) / 2592000 )) months",
			"keyWidth": 20
		},
		{
			"type": "command",
			"key": "\u001b[38;5;135m│\u001b[0m  Arch Journey:",
			"keyColor": "magenta",
			"text": "echo $(( ( $(date +%s) - $(date -d '2024-06-22' +%s) ) / 86400 )) days",
			"keyWidth": 20
		},
		{
			"type": "command",
			"key": "\u001b[38;5;135m│\u001b[0m  Current OS Age:",
			"keyColor": "magenta",
			"text": "echo $(( ( $(date +%s) - $(stat -c %W /) ) / 86400 )) days",
			"keyWidth": 20
		},
		{
			"type": "uptime",
			"key": "\u001b[38;5;135m│\u001b[0m  Uptime:",
			"keyColor": "magenta",
			"keyWidth": 20
		},
