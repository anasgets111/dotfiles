	"modules": [
		// ─────────────── Hardware ───────────────
		{
			"type": "custom",
			"format": "\u001b[38;5;40m╭─────────────────────────────── Hardware ───────────────────────────────╮"
		},
		{
			"type": "board",
			"key": "\u001b[38;5;40m│  Motherboard:",
