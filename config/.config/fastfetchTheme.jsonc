		// ─────────────── System Times ───────────────
		{
			"type": "custom",
			"format": "\u001b[38;5;135m╭──────────────────────────── System Times ──────────────────────────────╮"
		},
		{
			"type": "command",
			"key": "\u001b[38;5;135m│ Linux Journey:",
			"text": "echo $(( ( $(date +%s) - $(date -d '2024-02-15' +%s) ) / 2592000 )) months",
			"keyWidth": 20
		},
		{
			"type": "command",
			"key": "\u001b[38;5;135m│ Arch Journey:",
			"text": "echo $(( ( $(date +%s) - $(date -d '2024-06-22' +%s) ) / 86400 )) days",
			"keyWidth": 20
		},
		{
			"type": "command",
			"key": "\u001b[38;5;135m│ Current OS Age:",
			"text": "echo $(( ( $(date +%s) - $(stat -c %W /) ) / 86400 )) days",
			"keyWidth": 20
		},
		{
			"type": "uptime",
			"key": "\u001b[38;5;135m│ Uptime:",
			"keyWidth": 20
		},
		{
			"type": "custom",
			"format": "\u001b[38;5;135m╰────────────────────────────────────────────────────────────────────────╯"
		}
