match title="OpenRGB"
match title="Network Connections"
match title="Do you want to retry your last request"
match app-id="org.kde.kdeconnect.handler"
match app-id="waypaper"
open-floating true
}
window-rule {
    match app-id="mpv"
    opacity 1.0
    // variable-refresh-rate true  // Enable VRR for video playback
